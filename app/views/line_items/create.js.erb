$('#notice').hide();

$('#cart').show('blind', 250); 

$('#cart').html("<%= escape_javascript render(@cart) %>");


//#START_HIGHLIGHT

$('#current_item').css({'background-color':'#88ff88'}).
  animate({'background-color':'#114411'}, 1000);

$( "input[value*='Continue Shopping']" ).on("click", function(){
    $('#cart').hide();
});

$('#cart_item_count').html("<%= @cart.total_quantity %>");

$('.cart_img').on("click", function(){
    $('#cart').show('blind', 250); 

	$('#cart').html("<%= escape_javascript render(@cart) %>");

	$( "input[value*='Continue Shopping']" ).on("click", function(){
    $('#cart').hide();
});
});
